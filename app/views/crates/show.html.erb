<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/categories">Categories</a></li>
  <li><a href="/categories/<%= @crate.category_id %>"><%= @crate.category.name %></a></li>
  <li><a href="/crates/<%= @crate.id %>"><%= @crate.name %></a></li>
</ol>

<div class="app-container" data-crateid="<%= @crate.id %>" ng-app="checkboxApp">

<p id="notice"><%= notice %></p>

  <div class="row">

    <div class="left cd-md-5">
      <h2><%= @crate.name %></h2>
      <p><%= @crate.description %>
    </div>

  <div class="container">
    <div class="right cd-md-7">
      <div ng-controller="checkboxCtl">
        <div class="row" ng-repeat="item in items">
          <div class="col-md-1"><input type="checkbox" class="checkboxbutton" checkbox-group ng-model="item.checked"/></div>
          <div class="col-md-3">
            <div class="thumbnail-image">
              <img src="{{item.image.url}}">
            </div>
          </div>
          <div class="col-md-8">
            <div class="caption">
              <h3>{{item.name}}</h3>
              <p>{{item.description}}</p>
              <p>{{item.crate_id}}</p>
              <p>{{item.price}}</p>
              <span><button class="btn btn-danger" id="unload-btn">Unload</button></span>
            </div>
          </div>
        </div>
          <br><h1>Total Price = {{ totalPrice() }}</h1>
      </div>
    </div>
  </div>
  </div>

<button><a href="/checkout">Buy Crate</a></button>

<p><%= link_to 'Edit', edit_crate_path(@crate) %> |
<%= link_to 'Back', crates_path %>

</body>