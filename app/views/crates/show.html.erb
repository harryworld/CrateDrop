<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/categories">Categories</a></li>
  <li><a href="/categories/<%= @crate.category_id %>"><%= @crate.category.name %></a></li>
  <li><a href="/crates/<%= @crate.id %>"><%= @crate.name %></a></li>
</ol>

<body ng-app="checkboxApp">

<p id="notice"><%= notice %></p>

  <h2><%= @crate.name %></h2>
  <p><%= @crate.description %>


<div ng-controller="checkboxCtl">
  <div class="row">
    <div class="col-xs-6 col-sm-3" ng-repeat="item in items | filter:{crate_id:<%= @crate.id %>}">
      <div class="thumbnail">
        <div class="thumbnail-image">
          <img src="{{item.image.image.url}}">
        </div>
        <div class="caption">
          <h3>{{item.name}}</h3>
          <p>{{item.description}}</p>
          <p>{{item.crate_id}}</p>
          <p>{{item.price}}</p>
          <p><input type="checkbox" checkbox-group ng-model="item.checked" /></p>
        </div>
      </div>
    </div>
  </div>
  <br><h1>Total Price = {{ totalPrice() }}</h1>
</div>


<button><a href="/checkout">Buy Crate</a></button>

<p><%= link_to 'Edit', edit_crate_path(@crate) %> |
<%= link_to 'Back', crates_path %>

</body>