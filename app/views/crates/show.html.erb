<body ng-app="checkboxApp">

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4">
    <h2><%= @crate.name %></h2>
    <p><%= @crate.description %>
  <div>

<div ng-controller="checkboxCtl">

  <table id="items-table">
    <tr>
      <th>Status</th>
      <th>Item Name</th>
      <th>Item Price</th>
    </tr>
    <tr ng-repeat="item in items">
      <td><input type="checkbox" checkbox-group ng-model="item.checked" /></td>
      <td>{{item.name}}</td>
      <td>{{item.price}}</td>
    </tr>
  </table>

  <br><p>

  Total Price = {{ totalPrice() }}</p>

</div>


<p><%= link_to 'Edit', edit_crate_path(@crate) %> |
<%= link_to 'Back', crates_path %>

</body>