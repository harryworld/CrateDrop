<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/categories">Categories</a></li>
  <li><a href="/categories/<%= @crate.category_id %>"><%= @crate.category.name %></a></li>
  <li><a href="/crates/<%= @crate.id %>"><%= @crate.name %></a></li>
</ol>

<div class="app-container" data-crateid="<%= @crate.id %>" ng-app="checkboxApp" ng-controller="checkboxCtl">

<p id="notice"><%= notice %></p>


  <div class="row">

    <div class="col-md-4 left-thumbnails">
      <h1><%= @crate.name %></h1>
      <button><a href="/checkout">Buy Crate</a></button>
      <div class="crate-background">
        <div ng-repeat="item in items | filter:{checked:true}">
            <img id="left-thumbnail-img" src="{{item.image.url}}" style="transform:rotate({{item.rotation}}deg)">
        </div>
      </div>
    </div>
        <h3>Total Price / {{ totalPrice() }}</h3>


    <div class="col-md-8" id="scroll-content">
      <div>
        <div class="row" ng-repeat="item in items">
          <label>
            <div class="col-md-1"><input type="checkbox" ng-model="item.checked" /></div>
            <div class="col-md-3">
              <div class="thumbnail-image">
                <img src="{{item.image.url}}">
              </div>

            </div>
            <div class="col-md-8">
              <div class="caption">
                <h3>{{item.name}}</h3>
                <p>{{item.description}}</p>
                <p>{{item.crate_id}}</p>
                <p>{{item.price}}</p>
              </div>
            </div>
          </label>
        </div>
      </div>
    </div>
  </div>
</div>
